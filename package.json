{
  "name": "mal-vscode-extension",
  "publisher": "mal-lang",
  "version": "0.0.4",
  "repository": {"url": "https://github.com/mal-lang/mal-vscode-extension"},
  "engines": { "vscode": "^1.90.0" },
  "activationEvents": ["onLanguage:mal"],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mal",
        "aliases": ["MAL", "mal-lang"],
        "extensions": [".mal"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mal",
        "scopeName": "source.mal",
        "path": "./syntaxes/mal.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0"
  }
}
