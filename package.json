{
  "name": "mal-vscode-extension",
  "publisher": "mal-lang",
  "version": "0.0.2",
  "repository": {"url": "https://github.com/mal-lang/mal-vscode-extension"},
  "engines": { "vscode": "^1.90.0" },
  "activationEvents": ["onLanguage:mal"],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mal",
        "aliases": ["MAL", "mal-lang"],
        "extensions": [".mal"]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./"
  },
    "devDependencies": {
        "typescript": "^5.0.0",
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.90.0",
        "vscode-languageclient": "^9.0.1"
    }
}
